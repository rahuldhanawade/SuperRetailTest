<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0FD3C9">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1.7"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:padding="10dp"
                    android:background="@drawable/cardcorner"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product Name"
                            android:padding="2dp"
                            android:textSize="16sp"
                            android:layout_weight="0.4"
                            android:fontFamily="@font/average"
                            android:id="@+id/tv_product_name"
                            android:textColor="@color/colorPrimaryDark"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1.6"
                            android:gravity="right"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="â‚¹"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="4040"
                                android:textSize="16sp"
                                android:fontFamily="@font/average"
                                android:id="@+id/tv_selling_price"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_group_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:layout_weight="0.7"
                            android:background="@drawable/textcorner"
                            android:gravity="center_vertical"
                            android:drawablePadding="5dp"
                            android:textColor="#fff"
                            android:textStyle="italic"
                            android:layout_alignParentLeft="true"
                            android:fontFamily="@font/average"
                            android:padding="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qty: "
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_toLeftOf="@+id/tv_quantity"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/average"
                            android:padding="2dp"/>

                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_alignParentRight="true"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/average"
                            android:padding="2dp"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_barcode_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Barcode"
                        android:fontFamily="@font/average"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/ic_barcode"
                        android:drawablePadding="5dp"
                        android:padding="3dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_right"
                        android:layout_height="match_parent"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

