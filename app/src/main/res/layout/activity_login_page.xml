<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/average"
            android:text="Login to \nAccess \nyour \nAccount"
            android:textColor="#000"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/license"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.477">

        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/license"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="License Number"
            android:textColor="#0FD3C9"
            android:textColorHint="#0FD3C9"
            app:counterMaxLength="10"
            app:layout_constraintEnd_toStartOf="@+id/gl_r"
            app:layout_constraintStart_toStartOf="@+id/gl_l"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0FD3C9"
                android:maxLength="10"
                android:id="@+id/lic_no"
                android:padding="15dp"
                android:text="Khusali"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#0FD3C9"
                android:textColorLink="#00FFFFFF"
                android:textSize="15dp"
                app:fontFamily="@font/average" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edittext2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Mobile Number"
            android:textColor="#0FD3C9"
            android:textColorHint="#0FD3C9"
            android:textColorLink="#0FD3C9"
            app:fontFamily="@font/average"
            app:layout_constraintEnd_toStartOf="@+id/gl_r"
            app:layout_constraintStart_toStartOf="@+id/gl_l"
            app:layout_constraintTop_toBottomOf="@+id/license">

            <EditText
                android:id="@+id/mob_no"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:backgroundTint="#0FD3C9"
                android:inputType="number"
                android:maxLength="10"
                android:padding="15dp"
                android:shadowColor="#0FD3C9"
                android:text="9653345502"
                android:textColor="#000"
                android:textColorHint="#0FD3C9"
                android:textColorLink="#00FCF6F6"
                android:textSize="15dp"
                app:fontFamily="@font/average" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColor="#0FD3C9"
            android:textColorHint="#0FD3C9"
            android:textColorLink="#0FD3C9"
            app:passwordToggleEnabled="true"
            app:fontFamily="@font/average"
            app:layout_constraintEnd_toStartOf="@+id/gl_r"
            app:layout_constraintStart_toStartOf="@+id/gl_l"
            app:layout_constraintTop_toBottomOf="@+id/edittext2">

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#0FD3C9"
                android:inputType="textPassword"
                android:padding="15dp"
                android:shadowColor="#0FD3C9"
                android:text="miraroad@2019"
                android:textColor="#000"
                android:fontFamily="@font/average"
                android:textColorHint="#0FD3C9"
                android:textColorLink="#00FCF6F6"
                android:textSize="15dp"
                app:fontFamily="@font/average" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/average"
            android:text="Forgot Password ? "
            android:textColor="#0FD3C9"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/gl_r"
            app:layout_constraintTop_toBottomOf="@+id/password" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/box"
            android:gravity="center"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="15dp"
            app:fontFamily="@font/average"
            app:layout_constraintBottom_toTopOf="@+id/gl_b"
            app:layout_constraintEnd_toStartOf="@+id/gl_r"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="@+id/gl_l"
            app:layout_constraintTop_toBottomOf="@+id/password"
            app:layout_constraintWidth_percent="0.7" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/cloud"
            app:layout_constraintBottom_toTopOf="@+id/gl_b"
            app:layout_constraintEnd_toStartOf="@+id/gl_r"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/gl_l"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.218"
            app:layout_constraintWidth_percent="0.6" />

        <ImageView
            android:id="@+id/bill"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_marketing"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

<!--        <com.google.android.gms.common.SignInButton-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/sign_in_button"-->
<!--                android:layout_marginLeft="40dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginRight="40dp"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/button"-->
<!--                android:layout_marginBottom="20dp"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>